<div class="row">
  <div class="col s6">
    <h3>Edit A Trainer</h3>
    <br><br>
    <%= form_for @trainer do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <br></br>
      <%= f.label :age %>
      <%= f.number_field :age %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <%= f.label :new_password %>
      <%= f.password_field :password %>
      <%= f.label :confirm_new_password %>
      <%= f.password_field :password_confirmation %>
      <%= f.label :age %>
      <%= f.number_field :age, min: 1 %>
      <%= f.radio_button :gender, "Male" %><%= f.label :gender_male, "Male" %>
      <%= f.radio_button :gender, "Female" %><%= f.label :gender_female, "Female" %>
      <br></br>
      <%= f.submit class: "btn" %>
    <% end %>
    <%= link_to "Cancel", trainer_path(@trainer), class: "btn" %>
  </div>
  <div class="col s5 offset-s1">
    <%= image_tag("Venusaur.png", class: "med-image") %>
  </div>
</div>
