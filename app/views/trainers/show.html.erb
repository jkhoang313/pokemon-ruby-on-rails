<div class="row">
  <div class="col s12">
    <h2>Trainer <%= @trainer.name %></h2>
  </div>
</div>
<div class="row">
  <div class="col s4">
    <ul class="collection">
      <li class="collection-item">Starter Pokemon: <%= @trainer.starter_pokemon %></li>
      <li class="collection-item">Gender: <%= @trainer.gender %></li>
      <li class="collection-item">Age: <%= @trainer.age %></li>
      <li class="collection-item">Current Poke-tokens: <%= @trainer.poke_tokens %></li>
      <li class="collection-item">Next Poke-Token: <%= @trainer.token_status %></li>
      <li class="collection-item"><%= link_to "See All Pokemon", pokemons_path(@trainer) %></li>
      <li class="collection-item">Gyms Badges:<br>
        <% @a = @trainer.gyms.collect do |gym| %>
          <%= link_to image_tag("badges/#{gym.name}.png", class: "badge"), gym_path(gym) %>
        <% end %>
      </li>
    </ul>

    <% if current_trainer == @trainer %>
      <%= button_to "Claim Poke-Token", claim_token_path(@trainer), class: 'new-line btn' if @trainer.token_time_passed? %></br>
      <%= button_to "Edit Trainer", edit_trainer_path, class: 'btn',  method: :get %><br>
      <%= button_to "Delete Trainer", @trainer, class: 'btn', method: :delete, data: {confirm: 'Are you sure you want to delete this trainer?'} %>
    <% end %><br>
  </div>
  <div class="col s3 offset-s5">
    <h4>Current Team:</h4>
    <ul class="roster">
      <% @trainer.starters.each.with_index(1) do |pokemon, index| %>
      <li class="sprite-image"><%= image_tag("pokemon-sprite/#{pokemon.pokedex_id}.png", class: "sprite-image") %></li>
      <% end %>
    </ul>
  </div>
</div>
