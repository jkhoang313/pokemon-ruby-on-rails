<div class="row">
  <div class="col s12 center">
    <h2>Training</h2>
    <h4 class="<%= @status.downcase.gsub(" ", "_") %>"><%= @status %></h4>
  </div>
</div>

<div class="row">
<br><br><br>
<% if @status == "Open" %>
  <div class="col s3">
    <%= image_tag("gifs/open_training.gif") %>
  </div>
  <div class="col s3 offset-s5 right">
      <%= form_tag training_path do %>
        <%= collection_select :trainer, :pokemons, current_trainer.starters, :id, :name, {}, {class: "browser-default select"}%>
        <%= submit_tag "Train", class: "btn" %>
      <% end %>
  </div>
  <% else %>
  <div class="col s6">
    <%= image_tag("gifs/training.gif") %>
  </div>
  <div class="col s3 center">
    <h4>Time Left</h4>
    <h6><%= current_trainer.training_time_left %></h6>
  </div>
  <div class="col s3 center">
    <%= image_tag("pokemon/#{current_trainer.training_pokemon.name.downcase}.jpg") %>
    <h5><%= current_trainer.training_pokemon.name %></h5>
  </div>
  <% end %>
</div>
