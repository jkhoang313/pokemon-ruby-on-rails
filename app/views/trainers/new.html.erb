<div class="row">
  <div class="col s7">
    <br>
    <h2>Create A Trainer</h2>
    <br>
    <%= form_for @trainer do |f| %>
    <%= f.label :nickname %>
    <%= f.text_field :name %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.label :age %>
    <%= f.number_field :age, min: 1 %>
    <%= f.label :leading_pokemon_id, "Starter Pokemon" %>
    <br>
    <%= f.radio_button :leading_pokemon_id, 1 %>
    <%= f.label :leading_pokemon_id_1, image_tag("pokemon/bulbasaur.jpg", class: "small-picture") %>
    <%= f.label :leading_pokemon_id_1, "Bulbasaur" %>
    <%= f.radio_button :leading_pokemon_id, 4 %>
    <%= f.label :leading_pokemon_id_4, image_tag("pokemon/charmander.jpg", class: "small-picture") %>
    <%= f.label :leading_pokemon_id_4, "Charmander" %>
    <%= f.radio_button :leading_pokemon_id, 7 %>
    <%= f.label :leading_pokemon_id_7, image_tag("pokemon/squirtle.jpg", class: "small-picture") %>
    <%= f.label :leading_pokemon_id_7, "Squirtle" %>
    <br>
    <%= f.radio_button :gender, "Male" %><%= f.label :gender_male, "Male" %>
    <%= f.radio_button :gender, "Female" %><%= f.label :gender_female, "Female" %>
    <br>
    <%= f.submit class: "btn" %>
    <% end %>
    <%= link_ti "Cancel", trainers_path, class: "btn" %>
  </div>
  <div class="col s5">
    <%= image_tag('Charizard.png', class: "med-image") %>
  </div>
</div>
