<div class="row">
  <div class="col s12">
    <h3><%= @pokemon.name %></h3>
        <h6>Trainer: <%= @trainer.name  %></h6>
  </div>
</div>

<div class="row">
  <div class="col s3">
    <table class="striped">
      <tbody>
        <tr>
          <td>Level:</td>
          <td><%= @pokemon.level %></td>
        </tr>
        <tr>
          <td>HP:</td>
          <td><%= @pokemon.hp %></td>
        </tr>
        <tr>
          <td>Attack:</td>
          <td><%= @pokemon.attack %></td>
        </tr>
        <tr>
          <td>Defense:</td>
          <td><%= @pokemon.defense %></td>
        </tr>
        <tr>
          <td>Special Attack:</td>
          <td><%= @pokemon.special_attack %></td>
        </tr>
        <tr>
          <td>Special Defense:</td>
          <td><%= @pokemon.special_defense %></td>
        </tr>
        <tr>
          <td>Speed:</td>
          <td><%= @pokemon.speed %></td>
        </tr>
      </tbody>
    </table>
    <br>

    <%= button_to "Delete Pokemon", delete_pokemon_path(@trainer, @pokemon), method: :delete, class: 'new-line btn', data: {confirm: 'Are you sure you want to delete this pokemon?'} if current_trainer == @trainer %><br>
    <%= button_to "Back To All Pokemon", pokemons_path(@trainer), method: :get, class: "btn" %><br>
    <%= button_to "Back To Trainer #{@trainer.name}'s Page", trainer_path(@trainer), method: :get, class: "btn" %>
  </div>

  <div class="col s3 offset-s6">
    <%= image_tag("pokemon/#{@pokemon.name.downcase}.jpg", class: "pokemon-image") %>
  </div>
</div>
