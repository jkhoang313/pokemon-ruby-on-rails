<div class="row">
  <div class="col s12">
    <h2>Trainer <%= @trainer.name %></h2>
  </div>
</div>
<div class="row">
  <div class="col s4">
    <ul class="collection">
      <li class="collection-item">Gender: <%= @trainer.gender %></li>
      <li class="collection-item">Age: <%= @trainer.age %></li>
      <li class="collection-item"><%= link_to "See All Pokemon", pokemons_path(@trainer) %></li>
      <li class="collection-item">Current Poke-tokens: <%= @trainer.poke_tokens %></li>
      <li class="collection-item">Next Poke-Token: <%= @trainer.token_status %></li>
    </ul>

    <% if current_trainer == @trainer %>
      <%= button_to "Claim Poke-Token", claim_token_path(@trainer), class: 'new-line' if @trainer.token_time_passed? %>
      <%= button_to "Edit Trainer", edit_trainer_path, class: 'new-line btn',  method: :get %><br>
      <%= button_to "Delete Trainer", @trainer, class: 'new-line btn', method: :delete, data: {confirm: 'Are you sure you want to delete this trainer?'} %>
    <% end %><br>
    <%= button_to "Back to All Trainers", trainers_path, class: 'new-line btn', method: :get %>
  </div>
  <div class="col s3 offset-s5">
    <p>Current Team:</p>
    <ul>
      <% @trainer.starters.each.with_index(1) do |pokemon, index| %>
      <li><%= pokemon.name %></li>
      <% end %>
    </ul>
  </div>
</div>
