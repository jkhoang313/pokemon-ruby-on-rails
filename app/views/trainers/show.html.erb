<div class="row">
  <div class="col s12">
    <h2>Trainer <%= @trainer.name %></h2>
  </div>
</div>
<div class="row">
  <div class="col s9">
    <p>Gender: <%= @trainer.gender %></p>
    <p>Age: <%= @trainer.age %></p>
    <%= link_to "See All Pokemon", pokemons_path(@trainer) %>
    <p>Current Poke-tokens: <%= @trainer.poke_tokens %></p>
    <p> Next Poke-Token: <%= @trainer.token_status %> </p>

    <% if current_trainer == @trainer %>
      <%= button_to "Claim Poke-Token", claim_token_path(@trainer), class: 'new-line' if @trainer.token_time_passed? %>
      <%= button_to "Edit Trainer", edit_trainer_path, method: :get %>
      <%= button_to "Delete Trainer", @trainer, method: :delete, data: {confirm: 'Are you sure you want to delete this trainer?'} %>
    <% end %>
    <%= button_to "Back to All Trainers", trainers_path, class: 'new-line', method: :get %>
  </div>
  <div class="col s3">
    <p>Current Team:</p>
    <ul>
      <% @trainer.starters.each.with_index(1) do |pokemon, index| %>
      <li><%= pokemon.name %></li>
      <% end %>
    </ul>
  </div>
</div>
